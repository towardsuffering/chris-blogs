---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Icon } from '@astrojs/starlight/components';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.youtube.com/@root-labs" target="_blank">
				<span class="sr-only">Follow Chris Blogs on YouTube</span>
				<Icon name="youtube" size="2rem" />
			</a>
			<a href="https://discord.gg/WyjE3ABX4V" target="_blank">
				<span class="sr-only">Follow Chris Blogs on Discord</span>
				<Icon name="discord" size="2rem" />
			</a>
			<a href="https://www.linkedin.com/in/chris-rotunno/" target="_blank">
				<span class="sr-only">Follow Chris Blogs on LinkedIn</span>
				<Icon name="linkedin" size="2rem" />
			</a>
			</a>
			<a href="https://github.com/towardsuffering" target="_blank">
				<span class="sr-only">Follow Chris Blogs on GitHub</span>
				<Icon name="github" size="2rem" />
			</a>
			<a href="https://soundcloud.com/chris-rotunno" target="_blank">
				<span class="sr-only">Follow Chris Blogs on SoundCloud</span>
				<Icon name="star" size="2rem" />
			</a>
			<a href="https://www.linkedin.com/in/chris-rotunno/" target="_blank">
				<span class="sr-only">Follow Chris Blogs on RSS</span>
				<Icon name="rss" size="2rem" />
			</a>
		</div>
	</nav>
</header>
<style>
    header {
        margin: 0;
        padding: 0 1em;
        background: white;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }

    nav {
        display: grid;
        grid-template-columns: 1fr 2fr 1fr;
        align-items: center;
    }

    h2 {
        margin: 0;
        font-size: 1em;
        text-align: left;
    }

    .internal-links {
        display: flex;
        justify-content: center;
    }

    .social-links {
        display: flex;
        justify-content: flex-end;
    }

    nav a {
        padding: 1em 0.5em;
        color: var(--black);
        text-decoration: none; /* Remove text underline */
    }

    nav a.active {
        border-bottom: 4px solid var(--accent); /* Keep the underline for active link */
        text-decoration: none; /* Remove text underline */
    }

    .social-links a {
        display: flex;
        margin-left: 10px;
    }

    @media (max-width: 720px) {
        .social-links {
            display: none;
        }
    }
</style>
